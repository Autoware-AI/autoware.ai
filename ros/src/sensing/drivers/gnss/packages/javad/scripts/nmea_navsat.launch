<!-- nmea_navsar_driver MUST be installed before -->
<!-- sudo apt-get install ros-indigo-nmea-navsat-driver -->
<!-- publishes fix, vel and time_reference -->
<!-- For details: http://wiki.ros.org/nmea_navsat_driver-->
<launch> 

  <arg name="port" value="/dev/ttyUSB0"/>
  <arg name="baud" value="57600" />
 
  <!-- HOW TO RUN using rosrun:-->
<!-- GGA -->
  <!-- rosrun nmea_navsat_driver nmea_serial_driver _port:=/dev/ttyUSB0 _baud:=57600 -->
  <node pkg="nmea_navsat_driver" type="nmea_serial_driver" name="nmea_navsat_gga">
    <param name="port" value="$(arg port)" />
    <param name="baud" value="$(arg baud)" />
    <remap from="/fix" to="/gga_fix"/>
  </node>

  <!--RMC -->
  <!-- rosrun nmea_navsat_driver nmea_serial_driver _port:=/dev/ttyUSB0 _baud:=57600 _useRMC:=true-->
  <node pkg="nmea_navsat_driver" type="nmea_serial_driver" name="nmea_navsat_rmc">
    <param name="port" value="$(arg port)" />
    <param name="baud" value="$(arg baud)" />
    <param name="useRMC" value="true"/>
    <remap from="/fix" to="/rmc_fix"/> 
  </node>


