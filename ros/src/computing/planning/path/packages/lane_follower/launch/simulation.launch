<!-- -->
<launch>
	<arg name="current_pose_topic" default="odometry" />
	<arg name="mobility_frame" default="/base_link" />
	<arg name="velocity_kmh" default="5" /> <!-- set velocity (km/h) -->
	<arg name="lookahead_threshold" default="4" /> <!-- meter -->
	<arg name="waypoint_filename" default="/home/h_ohta/auto_ws/path3.txt" />

	<!-- transform path coordinate to global coordinate -->
	<node pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 /odom /path 100"
		name="odom_to_path" />


	<node pkg="lane_follower" type="odometry_pub" name="odometry_simu" />


	<!-- rosrun lane_follower test_lane_navigator _filename:="path file" -->
	<node pkg="lane_follower" type="test_lane_navigator" name="lane_nav">
		<param name="filename" value="$(arg waypoint_filename)" />
	</node>

<!-- rosrun lane_follower lane_follower _current_pose_topic:="topic" _mobility_frame:="/frame" 
		_velocity_kmh:=0 _lookahead_threshold:=0 -->
	<node pkg="lane_follower" type="lane_follower" name="lane_follower">
		<param name="current_pose_topic" value="$(arg current_pose_topic)" />
		<param name="mobility_frame" value="$(arg mobility_frame)" />
		<param name="velocity_kmh" value="$(arg velocity_kmh)" />
		<param name="lookahead_threshold" value="$(arg lookahead_threshold)" />
	</node>

</launch>