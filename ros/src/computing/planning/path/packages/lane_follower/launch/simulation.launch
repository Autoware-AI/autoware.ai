<!-- -->
<launch>
	<arg name="current_pose_topic" default="odometry" />
	<arg name="mobility_frame" default="/base_link" />
	<arg name="threshold_ratio" default="0.001" /> 
	<arg name="end_distance" default="1.0" /> 
	<arg name="waypoint_filename" default="/home/h_ohta/catkin_ws/path3.txt" />

<arg name="frame" default="/odom" /> 
	<!-- transform path coordinate to global coordinate -->
	<node pkg="tf" type="static_transform_publisher" name="path_tf" args="0 0 0 0 0 0 $(arg frame) /path 100" />


	<node pkg="lane_follower" type="odometry_pub" name="odometry_simu" />


	<!-- rosrun lane_follower test_lane_navigator _filename:="path file" -->
	<node pkg="lane_follower" type="test_lane_navigator" name="lane_nav">
		<param name="filename" value="$(arg waypoint_filename)" />
	</node>

	<!-- rosrun lane_follower lane_follower _current_pose_topic:="topic" _mobility_frame:="/frame" _velocity_kmh:=0 _lookahead_threshold:=0 -->
	<node pkg="lane_follower" type="lane_follower" name="lane_follower" output="screen">
		<param name="current_pose_topic" value="$(arg current_pose_topic)" />
		<param name="mobility_frame" value="$(arg mobility_frame)" />
			<param name="threshold_ratio" value="$(arg threshold_ratio)" />
			<param name="end_distance" value="$(arg end_distance)" />
	</node>

</launch>