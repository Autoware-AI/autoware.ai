<!-- -->
<launch>
	<arg name="save_finename" default="$(find lane_follower)/path/ndtpath.txt" />
	<arg name="save_topic" default="ndt" /> <!--  amcl or ndt or gnss -->
<arg name="interval" default="4" /> 

<!-- rosrun lane_follower waypoint_saver _save_topic:=[topic] _interval:=[value] _save_filename:="[save file]" -->
	<node pkg="lane_follower" type="waypoint_saver" name="waypoint_saver">
		<param name="save_filename" value="$(arg save_finename)" />
		<param name="save_topic" value="$(arg save_topic)" />
		<param name="interval" value="$(arg interval)" />
	</node>

</launch>