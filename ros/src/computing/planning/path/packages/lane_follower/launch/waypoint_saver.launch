<launch>
	<arg name="save_finename" default="$(find lane_follower)/path/path.txt" />
	<arg name="save_topic" default="amcl" />

	<node pkg="lane_follower" type="waypoint_saver" name="waypoint_saver">
		<param name="save_finename" value="$(arg save_finename)" />
		<param name="save_topic" value="$(arg save_topic}" />
	</node>

</launch>