<launch>
  <arg name="launch_car" default="true"/>
  <arg name="launch_person" default="false"/>

  <group if="$(arg launch_car)">
    <group ns="obj_car">

      <node pkg="cv_tracker" name="tracking" type="kf_track">
          <remap from="/config/obj_car/kf" to="/config/car_kf" />
      </node>

    </group>
  </group>

  <group if="$(arg launch_person)">
    <group ns="obj_person">

      <node pkg="cv_tracker" name="tracking" type="kf_track">
          <remap from="/config/obj_person/kf" to="/config/pedestrian_kf" />
      </node>

    </group>
  </group>

</launch>
