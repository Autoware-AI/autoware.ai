	<arg name="yaw" default="-0.5" />  
	
	<!-- <arg name="orientation_x" default="0" />
	<arg name="orientation_y" default="0" />
	<arg name="orientation_z" default="0" />
	<arg name="orientation_w" default="1" />
 -->
	<!-- transform path coordinate to global coordinate -->
	<node pkg="tf" type="static_transform_publisher" name="odom2map" args="0 0 0 0 0 0 $(arg map_frame) $(arg odometry_frame) 100" />

	<node pkg="lane_follower" type="odom_gen" name="odometry_sim" output="screen">
		<param name="use_pose" value="$(arg use_pose)" />
		<param name="use_topic" value="$(arg use_topic)" />
		<param name="rotation_set" value="$(arg rotation_set)" />
		<param name="px" value="$(arg position_x)" />
		<param name="py" value="$(arg position_y)" />
		<param name="pz" value="$(arg position_z)" />
		<param name="yaw" value="$(arg yaw)" />
	<!-- 	 <param name="ox" value="$(arg orientation_x)" />
		<param name="oy" value="$(arg orientation_y)" />
		<param name="oz" value="$(arg orientation_z)" />
		<param name="ow" value="$(arg orientation_w)" /> 
		 -->
	</node>


</launch>