<library path="lib/libautoware_rviz_plugins">

  <class name="autoware_rviz_plugins/State" type="autoware_rviz_plugins::StatePanel" base_class_type="rviz::Panel">
    <description>
      State Panel on rviz
    </description>
  </class>

  <class name="autoware_rviz_plugins/VehicleMonitor" type="autoware_rviz_plugins::VehicleMonitor" base_class_type="rviz::Display">
    <description>Visualize the vehicle command and vehicle status.</description>
    <message_type>autoware_msgs/VehicleCmd</message_type>
    <message_type>autoware_msgs/VehicleStatus</message_type>
  </class>

  <class name="autoware_rviz_plugins/VehicleStatusMonitor" type="autoware_rviz_plugins::VehicleStatusMonitor" base_class_type="rviz::Display">
    <description>
      Visualize Vhicle Status in rviz.
    </description>
    <message_type>autoware_msgs/VhicleStatus</message_type>
  </class>
    
  <class name="autoware_rviz_plugins/VehicleCmdMonitor" type="autoware_rviz_plugins::VehicleCmdMonitor" base_class_type="rviz::Display">
    <description>
      Visualize Vhicle Command in rviz.
    </description>
    <message_type>autoware_msgs/VehicleCmd</message_type>
  </class>

  <class name="autoware_sim_object/OpFlag" type="autoware_sim_object::AutowareSimObjTool" base_class_type="rviz::Tool">
    <description>
      Tool for sim_obj flags on the ground plane in rviz.
    </description>
  </class>

</library>
